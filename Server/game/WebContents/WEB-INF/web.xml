<web-app id="game" version="2.4">
    <servlet>
        <servlet-name>echo</servlet-name>
        <servlet-class>EchoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>user-list</servlet-name>
        <servlet-class>UserListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>user-add</servlet-name>
        <servlet-class>UserAddServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>user-update</servlet-name>
        <servlet-class>UserUpdateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>attack</servlet-name>
        <servlet-class>AttackServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>session</servlet-name>
        <servlet-class>SessionServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>echo</servlet-name>
        <url-pattern>/echo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>user-list</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>user-add</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>user-update</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>attack</servlet-name>
        <url-pattern>/attack</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>session</servlet-name>
        <url-pattern>/session</url-pattern>
    </servlet-mapping>
    
    <welcome-file-list>
        <welcome-file>docs.html</welcome-file>
    </welcome-file-list>
</web-app>
